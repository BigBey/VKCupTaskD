<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/editLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|center_vertical"
            android:layout_marginEnd="18dp">
            <ImageView
                android:id="@+id/closeImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                />
            <TextView
                android:id="@+id/editModeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_marginStart="18dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/documentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/albums"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="19dp"
            />
        <LinearLayout
            android:id="@+id/defaultLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="18dp">

            <ImageView
                android:id="@+id/editImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pen"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/plusImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="7dp"
                android:padding="10dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/albumsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"></androidx.recyclerview.widget.RecyclerView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:theme="@style/CircularProgress"></ProgressBar>
    </FrameLayout>

</LinearLayout>